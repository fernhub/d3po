{
  "ts-node": {
    "esm": true,
    "require": ["tsconfig-paths/register"],
    "compilerOptions": {
      "moduleResolution": "nodenext"
    }
  },
  "compilerOptions": {
    "target": "esnext",
    "module": "ES2022",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "$/*": ["./src/*"]
    }
  },
  "include": ["./src/**/*.ts", ".eslintrc.cjs"],
  "exclude": ["node_modules"]
}
